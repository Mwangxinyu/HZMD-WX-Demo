.sz-swiper image {
    width: 100%;
    height: 100%;
    background-color: #BCBCBC;
}

.sz-swiper {
    position: relative;
}

.tip {
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    width: 72rpx;
    height: 40rpx;
    background: rgba(51,51,51,.5);
    border-radius: 40rpx;
    font-size: 22rpx;
    color: #fff;
    line-height: 40rpx;
    text-align: center;
}