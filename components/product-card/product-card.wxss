@import '../../styles/common.wxss';
.product-card {
    background: rgba(255, 255, 255, 1);
    border-radius: 15rpx;
    border: 2rpx solid rgba(238, 238, 238, 1);
    overflow: hidden;
    box-sizing: border-box;
}

.shadow {
    box-shadow: 0 6rpx 12rpx 0 rgba(18, 55, 123, 0.1);
}

.product-card image {
    background-color: #BCBCBC;
}

.product-card .info-box {
    display: flex;
    flex-direction: column;
    padding: 0 20rpx 13rpx;
}

.info-box .title {
    font-size: 24rpx;
    color: rgba(29, 29, 37, 1);
    line-height: 33rpx;
    margin-top: 16rpx;
    margin-bottom: 10rpx;
    height: 60rpx;
}

.info-box .sale-price text {
    text-decoration: line-through;
}

.info-box .trans-price text {
    font-size: 26rpx;
    color: rgba(0, 160, 255, 1);
    line-height: 37rpx;
}

.info-box .price {
    font-size: 20rpx;
    color: rgba(155, 155, 155, 1);
    line-height: 28rpx;
}