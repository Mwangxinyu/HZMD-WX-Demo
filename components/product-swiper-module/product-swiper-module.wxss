@import '../../styles/common.wxss';
.product-swiper-card{
    background: rgba(255, 255, 255, 1);
    overflow: hidden;
    width: 100%;
}

.shadow {
    box-shadow: 0 6rpx 12rpx 0 rgba(18, 55, 123, 0.1);
}

.product-swiper-card image {
    width: 100%;
    height: 620rpx;
    background-color: #BCBCBC;
}

.product-swiper-card .info-box {
    display: flex;
    flex-direction: column;
    padding: 0 30rpx 32rpx;
}

.info-box .title {
    font-size: 30rpx;
    color: #1D1D25;
    line-height: 40rpx;
    margin-top: 33rpx;
    margin-bottom: 25rpx;
    height: 80rpx;
}

.info-box .sale-price text {
    text-decoration: line-through;
}

.info-box .trans-price text {
    font-size: 32rpx;
    color: rgba(0, 160, 255, 1);
    line-height: 40rpx;
}

.info-box .price {
    font-size: 26rpx;
    color: rgba(155, 155, 155, 1);
    line-height: 40rpx;
}