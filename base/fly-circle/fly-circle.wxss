@import '../../styles/common.wxss';
@import '../../styles/iconfont.wxss';

.service-materiel {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 0px 30rpx 0px rgba(18, 55, 123, 0.12);
    overflow: hidden;
}

.service-materiel .icon {
    display: flex;

}

.service-materiel .text {
    font-size: 20rpx;
    color: rgba(136, 136, 136, 1);
    line-height: 25rpx;
    margin-top: 6rpx;
}

.service-materiel .icon {
    font-size: 28rpx;
    color: #9B9B9B;
}

.service-materiel .fly-box {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: rgba(255, 255, 255, 1);
}


.service-materiel button {
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 1);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    color: rgba(136, 136, 136, 1);
    line-height: 25rpx;    
    padding: 0;
}