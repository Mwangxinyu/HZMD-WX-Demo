@import '../../styles/iconfont.wxss';

.card-holder-item .from {
    font-size: 22rpx;
    color: #B9B9B9;
    line-height: 30rpx;
    padding: 20rpx 0 10rpx 0;
}

.card {
    position: relative;
    background-color: #fff;
    height: 274rpx;
    box-shadow: 0px 8px 10px 0px rgba(18, 55, 123, 0.03);
    border-radius: 15px;
}

.card .content {
    display: flex;
}

.card .mask {
    width: 100%;
    height: 100%;
    background-color: #B1B1B1;
    opacity: .9;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 15px;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 10;
}

.card .mask text {
    font-size: 34rpx;
    color: rgba(255, 255, 255, 1);
    line-height: 48rpx;
}

.card .content image {
    margin-top: 57rpx;
    margin-left: 30rpx;
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    box-sizing: border-box;
    border: 2rpx solid #F2F4F8;
    background-color: #BCBCBC;
}

.info-box {
    display: flex;
    flex-direction: column;
    margin-left: 22rpx;
}

.info-box .header .name {
    font-size: 36rpx;
    color: rgba(29, 29, 37, 1);
    line-height: 50rpx;
}

.info-box .header {
    margin-top: 35rpx;
}

.info-box .header .position {
    font-size: 24rpx;
    color: rgba(74, 74, 74, 1);
    line-height: 33rpx;
    margin-left: 20rpx;
    margin-bottom: 4rpx;
}

.info-box .item {
    display: flex;
    align-items: center;
}

.info-box .item.first {
    margin-top: 20rpx;
    margin-bottom: 8rpx;
}

.info-box .item.last {
    margin-top: 9rpx;
}

.info-box .item .label {
    font-size: 20rpx;
    color: #CACCCF;
}

.info-box .item .value {
    font-size: 28rpx;
    color: rgba(29, 29, 37, 1);
    line-height: 40rpx;
    margin-left: 15rpx;
}

.card .star {
    position: absolute;
    top: 30rpx;
    right: 35rpx;
    font-size: 33rpx;
}

.icon-biaoxing {
    color: #FEAC48;
}

.icon-biaoxing1 {
    color: #EAEAEA;
}

.card .more {
    position: absolute;
    right: 35rpx;
    bottom: 30rpx;
    width: 37rpx;
    height: 37rpx;
    z-index: 99;
    color: #CCCCCC;
    font-size: 37rpx;
}

.card .more .more-box {
    position: absolute;
    z-index: 100;
    top: 48rpx;
    right: -25rpx;
    width: 148rpx;
    border: 2rpx solid #E6E6E6;
    border-radius: 8rpx;
    background-color: #fff;
    flex-direction: column;
}

.card .more .more-box:before {
    content: '';
    position: absolute;
    width: 0;
    height: 0;
    border-width: 0 12rpx 10rpx;
    border-style: solid;
    border-color: transparent transparent #E6E6E6;
    top: -10rpx;
    right: 28rpx;
}

.card .more .more-box:after {
    content: '';
    position: absolute;
    width: 0;
    height: 0;
    border-width: 0 12rpx 10rpx;
    border-style: solid;
    border-color: transparent transparent #fff;
    top: -8rpx;
    right: 28rpx;
}

.card .more .more-box .text {
    flex: 1;
    text-align: center;
    height: 62rpx;
    line-height: 62rpx;
    font-size: 24rpx;
    color: rgba(74, 74, 74, 1);
}