.decorative-materiel-line {
    background-color: transparent;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
}

.decorative-materiel-line .core {
    margin: 30rpx 0;
    width: 6rpx;
    height: 6rpx;
    border-radius: 50%;
    background: rgba(225, 225, 225, 1);
    position: relative;
}

.decorative-materiel-line .core:before {
    content: '';
    display: inline-block;
    width: 170rpx;
    height: 2rpx;
    background: linear-gradient(-90deg, rgba(225, 225, 225, 0), rgba(225, 225, 225, 1));
    border-radius: 22rpx;
    position: absolute;
    left: 15rpx;
    top: 50%;
    transform: translateY(-1rpx);
}

.decorative-materiel-line .core:after {
    content: '';
    display: inline-block;
    width: 170rpx;
    height: 2rpx;
    background: linear-gradient(90deg, rgba(225, 225, 225, 0), rgba(225, 225, 225, 1));
    border-radius: 22rpx;
    position: absolute;
    right: 15rpx;
    top: 50%;
    transform: translateY(-1rpx);
}