.tag {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    border-radius: 30px;
    background-color: #fff;
    border: 2rpx solid #00A0FF;
    color: #00A0FF;
    box-sizing: border-box;
    padding: 10rpx 28rpx;
}

.tag .like {
    font-size: 22rpx;
    color: rgba(187, 187, 187, 1);
    line-height: 30rpx;
    margin-left: 14rpx;
}