@import '../../styles/common.wxss';
.message-product-remind {
    display: flex;
    flex-direction: column;
}

.last {
    padding-bottom: 50rpx;
}

.message-product-remind .date {
    font-size: 22rpx;
    color: rgba(155, 155, 155, 1);
    line-height: 30rpx;
    padding: 36rpx 0 35rpx;
    width: 100%;
    text-align: center;
}

.message-product-remind .main {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    padding-bottom: 28rpx;
}

.main .content {
    width: 100%;
    display: flex;
    padding-top: 24rpx;
}

.content image {
    width: 120rpx;
    height: 120rpx;
    border: 2rpx solid #F2F4F8;
    margin-left: 20rpx;
    background-color: #BCBCBC;
}

.info-box {
    display: flex;
    flex-direction: column;
    margin-left: 25rpx;
}

.info-box .title {
    font-size: 28rpx;
    color: rgba(29, 29, 37, 1);
    line-height: 32rpx;
    margin-bottom: 8rpx;
    height: 64rpx;
    max-width: 561rpx;
}

.info-box .sale-price text {
    text-decoration: line-through;
}

.info-box .trans-price text {
    font-size: 26rpx;
    color: rgba(0, 160, 255, 1);
    line-height: 40rpx;
}

.info-box .price {
    font-size: 22rpx;
    color: rgba(155, 155, 155, 1);
    line-height: 40rpx;
}

sz-button {
    margin-top: 19rpx;
    width: 264rpx;
    height: 54rpx;
}